# layout
yabai -m config layout bsp
yabai -m config --space 2 layout float

# New window spawns to the right if vertical split, or bottom if horizontal split
yabai -m config window_placement second_child
yabai -m config top_padding 10
yabai -m config bottom_padding 0
yabai -m config left_padding 10
yabai -m config right_padding 10
yabai -m config window_gap 8
yabai -m config --space 2 window_gap 0

# Split ratios
yabai -m config auto_balance on

# Mouse support
yabai -m config mouse_follows_focus on
yabai -m config mouse_modifier fn
yabai -m config mouse_action1 move
yabai -m config mouse_action2 resize
yabai -m mouse_drop_action swap

# Window modifications
yabai -m config window_topmost on
yabai -m config window_shadow float
yabai -m config window_opacity off
yabai -m config active_window_opacity 1.0
yabai -m config normal_window_opacity 0.9

# Spacebar
SPACEBAR_HEIGHT=$(spacebar -m config height)
yabai -m config external_bar all:0:$SPACEBAR_HEIGHT

# Status bar
# add 20 padding to the top and 0 padding to the bottom of every space located on the main display
# yabai -m config external_bar main:5:0
# add 20 padding to the top and bottom of all spaces regardless of the display it belongs to
# yabai -m config external_bar all:20:20

# Disable specific apps from being managed with yabai
DISABLED_APPS="^(System Settings|Calculator|Karabiner-Elements|balenaEtcher|Alfred Preferences|Archive Utility|Preview)$"
yabai -m rule --add app="${DISABLED_APPS}" manage=off

yabai -m rule --add app="^Google Chrome$" space=1

# Text editors
yabai -m rule --add app="^(Code|RStudio)$" space=2

# Jetbrains apps
IDE_APPS="^(IntelliJ IDEA|WebStorm|RubyMine|PyCharm|DataGrip)$"
yabai -m rule --add app="${IDE_APPS}" space=3  manage=off

# Terminal
yabai -m rule --add app="^(Alacritty|Firefox)$" space=4

# Social & Music
yabai -m rule --add app="^(Slack|WhatsApp|Microsoft Teams|Telegram|Spotify|Youtube Music)$" space=5
